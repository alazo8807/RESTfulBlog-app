<% include ./partials/header %>

<div class="ui main text container segment">Edit blog
    <div class="ui huge header"><%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name= "blog[title]" value="<%= blog.title %>"></input>    
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name= "blog[image]" value="<%= blog.image %>"></input>    
        </div>
        <div class="field">
            <label>Body Content</label>
            <textarea type="text" name= "blog[body]"><%= blog.body %></textarea>    
        </div>
        
        <input class="ui green button" type="submit"></input>
    </form>
</div>

<% include ./partials/footer %>